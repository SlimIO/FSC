{
    "name": "@slimio/fsc",
    "version": "0.1.0",
    "description": "L’addon FSC (File System Controller) permet de vérifier les fichiers et dossiers du système (basé sur une configuration .json que le client sera en mesure de modifier).",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/Fsc.git"
    },
    "keywords": [
        "SlimIO",
        "FSC",
        "Monitoring",
        "Files",
        "Repository",
        "Supervision",
        "Check",
        "Alarm",
        "JSON",
        "Config",
        "Schema",
        "Loader",
        "observable",
        "reactive",
        "hotreload"
    ],
    "files": [
        "index.js",
        "src"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/Fsc/issues"
    },
    "homepage": "https://github.com/SlimIO/Fsc#readme",
    "dependencies": {
        "@slimio/addon": "^0.22.1",
        "@slimio/alert": "^0.2.0",
        "@slimio/metrics": "^0.4.0",
        "@slimio/profiles": "^0.1.2",
        "ssri": "^8.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.1.0",
        "@slimio/psp": "^0.11.1",
        "ava": "^3.9.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.17.0",
        "husky": "^4.2.5",
        "jsdoc": "^3.6.4",
        "nyc": "^15.1.0",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js src/utils.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    },
    "type": "module"
}
