{
    "name": "@slimio/fsc",
    "version": "0.1.0",
    "description": "L’addon FSC (File System Controller) permet de vérifier les fichiers et dossiers du système (basé sur une configuration .json que le client sera en mesure de modifier).",
    "main": "index.js",
    "scripts": {
        "start": "node index.js",
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "nyc npm test",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/Fsc.git"
    },
    "keywords": [
        "SlimIO",
        "FSC",
        "Monitoring",
        "Files",
        "Repository",
        "Supervision",
        "Check",
        "Alarm",
        "JSON",
        "Config",
        "Schema",
        "Loader",
        "observable",
        "reactive",
        "hotreload"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/Fsc/issues"
    },
    "homepage": "https://github.com/SlimIO/Fsc#readme",
    "dependencies": {
        "@slimio/addon": "^0.18.0",
        "@slimio/alert": "^0.2.0",
        "@slimio/config": "^0.13.0",
        "@slimio/metrics": "^0.4.0",
        "@slimio/scheduler": "^0.6.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^2.0.4",
        "ava": "^2.1.0",
        "eslint": "^5.16.0",
        "husky": "^2.4.1",
        "jsdoc": "^3.6.2",
        "pkg-ok": "^2.3.1",
        "cross-env": "^5.2.0",
        "@slimio/psp": "^0.5.3",
        "nyc": "^14.1.1"
    },
    "engines": {
        "node": ">=10"
    },
    "husky": {
        "hooks": {
            "pre-push": "eslint && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 98,
        "statements": 98,
        "functions": 98,
        "branches": 90
    }
}
